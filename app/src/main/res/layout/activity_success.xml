<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Candidate Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@android:color/white">

        <TextView
            android:id="@+id/candidateDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Candidate Details Loading..."
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </androidx.cardview.widget.CardView>
    <!-- Success animation icon -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginBottom="16dp"
        app:tint="@color/success_green" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Submitted"
        android:textColor="@color/success_green"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your details have been sent successfully."
        android:textSize="14sp"
        android:textColor="@color/gray_dark"
        android:layout_marginBottom="24dp"/>



    <!-- Back to Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backHomeButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search more jobs"
        app:icon="@drawable/home"
        app:iconPadding="8dp"
        app:iconGravity="start"
        app:backgroundTint="@color/purple"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appliedJobsButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applied Jobs"
        app:icon="@drawable/jobs"
        app:iconPadding="8dp"
        app:iconGravity="start"
        app:backgroundTint="@color/lightPurple"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"/>

</LinearLayout>
